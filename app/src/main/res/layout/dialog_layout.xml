<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbars="none"
android:background="@drawable/dialog_bg"
    android:backgroundTint="#ffffff"
    android:layout_marginHorizontal="10dp"
>
        <RelativeLayout     android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dialog_layout"
            android:orientation="vertical"
            android:clipToOutline="true"

            >
           <androidx.constraintlayout.widget.ConstraintLayout
               android:layout_margin="4dp"
               android:id="@+id/close_dialog_btn_container"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <androidx.appcompat.widget.AppCompatImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/close_dialog_btn"
                   android:layout_gravity="right"
                   android:background="@drawable/rounded_button"
                   android:padding="2dp"

                   android:src="@drawable/ic_close"
                   android:visibility="visible"
                   app:layout_constraintEnd_toEndOf="parent" />
           </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/close_dialog_btn_container"
                android:textAlignment="center" />


            <RelativeLayout
                android:id="@+id/dialog_layout_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:orientation="vertical">

            </RelativeLayout>

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dialog_layout_content"
                android:id="@+id/btn_next"
                android:background="@drawable/next_btn_bg"
                android:gravity="center"
                android:foregroundGravity="center_horizontal"
                android:text="Next"
                android:textSize="16sp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_centerHorizontal="true"
                android:layout_marginVertical="10dp"
                android:textColor="@color/white" />
        </RelativeLayout>
    </ScrollView>

